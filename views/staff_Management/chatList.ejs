<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Patient Chats</title>
</head>
<body>
  <h2>Patients</h2>
  <% if (!patients || patients.length === 0) { %>
    <p>No patients found.</p>
  <% } %>

  <% patients.forEach(p => { %>
    <div style="padding:10px;border:1px solid #ddd;margin-bottom:8px">
      <strong><%= p.name %></strong>
      <div><a href="/chat/<%= p._id %>">Open Chat</a></div>
    </div>
  <% }) %>
</body>
</html>

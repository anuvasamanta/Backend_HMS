<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>
        <%=title%>
    </title>

    <!-- Custom fonts for this template -->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        .action-buttons {
            white-space: nowrap;
        }

        .action-buttons .btn {
            margin: 2px;
        }

        .badge {
            font-size: 0.8em;
        }
    </style>
</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include('../layouts/sidebar.ejs') %>
            <!-- End of Sidebar -->

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    <%- include('../layouts/navbar.ejs') %>
                        <!-- End of Topbar -->

                        <!-- Begin Page Content -->
                        <div class="container-fluid">

                            <!-- Page Heading -->
                            <h1 class="h3 mb-2 text-gray-800">Hospital Staff Management</h1>
                            <p class="mb-4">Manage all hospital staff categorized by roles.</p>

                            <div class="card shadow mb-4">
                                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">Staff List</h6>
                                    <a href="/admin/create-staff" class="btn btn-primary btn-sm">
                                        <i class="fas fa-plus"></i> Add New Staff
                                    </a>
                                </div>

                                <% if (success && success.length> 0) { %>
                                    <div class="alert alert-success">
                                        <%= success %>
                                    </div>
                                    <% } %>

                                        <% if (error && error.length> 0) { %>
                                            <div class="alert alert-danger">
                                                <%= error %>
                                            </div>
                                            <% } %>
                                                <div class="card-body">

                                                    <!-- ===================== ROLE WISE TABS ===================== -->
                                                    <ul class="nav nav-tabs" id="roleTabs" role="tablist">
                                                        <li class="nav-item">
                                                            <a class="nav-link active" id="doctor-tab" data-toggle="tab"
                                                                href="#doctor" role="tab">Doctors</a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link" id="nurse-tab" data-toggle="tab"
                                                                href="#nurse" role="tab">Nurses</a>
                                                        </li>
                                                        <li class="nav-item">
                                                            <a class="nav-link" id="staff-tab" data-toggle="tab"
                                                                href="#staff" role="tab">Staff</a>
                                                        </li>
                                                    </ul>

                                                    <div class="tab-content mt-3">

                                                        <!-- ===================== DOCTOR TABLE ===================== -->
                                                        <div class="tab-pane fade show active" id="doctor"
                                                            role="tabpanel">
                                                            <div class="table-responsive">
                                                                <table class="table table-bordered doctorTable"
                                                                    width="100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Name</th>
                                                                            <th>Email</th>
                                                                            <th>Phone</th>
                                                                            <th>Department</th>
                                                                            <th>Specialization</th>
                                                                            <th>Location</th>
                                                                            <th>Hospital</th>
                                                                            <th>createdAt</th>
                                                                            <th>Actions</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% staffList.filter(u=> u.role ===
                                                                            "doctor").forEach(function(h) { %>
                                                                            <tr>
                                                                                <td>
                                                                                    <%= h.name %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.email %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.phone %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.department %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.specialization %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.address %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.hospitalName %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= new
                                                                                        Date(h.createdAt).toLocaleDateString('en-US',
                                                                                        { year: 'numeric' ,
                                                                                        month: 'long' , day: 'numeric'
                                                                                        }) %>
                                                                                </td>


                                                                                <td class="action-buttons">

                                                                                    <a href="/admin/edit-staff/<%= h._id %>"
                                                                                        class="btn btn-primary btn-sm">
                                                                                        <i class="fas fa-edit"></i>
                                                                                    </a>

                                                                                    <a href="/admin/delete-staff/<%= h._id %>"
                                                                                        class="btn btn-danger btn-sm">
                                                                                        <i class="fas fa-trash"></i>
                                                                                    </a>

                                                                                </td>
                                                                            </tr>
                                                                            <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                        <!-- ===================== NURSE TABLE ===================== -->
                                                        <div class="tab-pane fade" id="nurse" role="tabpanel">
                                                            <div class="table-responsive">
                                                                <table class="table table-bordered nurseTable"
                                                                    width="100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Name</th>
                                                                            <th>Email</th>
                                                                            <th>Phone</th>
                                                                            <th>Department</th>
                                                                            <th>Shift</th>
                                                                            <th>Location</th>
                                                                            <th>Hospital</th>
                                                                            <th>createdAt</th>
                                                                            <th>Actions</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% staffList.filter(u=> u.role ===
                                                                            "nurse").forEach(function(h) { %>
                                                                            <tr>
                                                                                <td>
                                                                                    <%= h.name %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.email %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.phone %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.department %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.shifting || "N/A" %>
                                                                                        <a class="collapse-item"
                                                                                            href="/admin/assign/shifting/<%= h._id %>">
                                                                                            Assign shifting
                                                                                        </a>

                                                                                </td>
                                                                                <td>
                                                                                    <%= h.address %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.hospitalName %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= new
                                                                                        Date(h.createdAt).toLocaleDateString('en-US',
                                                                                        { year: 'numeric' ,
                                                                                        month: 'long' , day: 'numeric'
                                                                                        }) %>
                                                                                </td>

                                                                                <td class="action-buttons">

                                                                                    <a href="/admin/edit-staff/<%= h._id %>"
                                                                                        class="btn btn-primary btn-sm">
                                                                                        <i class="fas fa-edit"></i>
                                                                                    </a>
                                                                                    <a href="/admin/delete-staff/<%= h._id %>"
                                                                                        class="btn btn-danger btn-sm">
                                                                                        <i class="fas fa-trash"></i>
                                                                                    </a>
                                                                                </td>
                                                                            </tr>
                                                                            <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                        <!-- ===================== STAFF TABLE ===================== -->
                                                        <div class="tab-pane fade" id="staff" role="tabpanel">
                                                            <div class="table-responsive">
                                                                <table class="table table-bordered staffTable"
                                                                    width="100%">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Name</th>
                                                                            <th>Email</th>
                                                                            <th>Phone</th>
                                                                            <th>Department</th>
                                                                            <th>Shift</th>
                                                                            <th>Location</th>
                                                                            <th>Hospital</th>
                                                                            <th>createdAt</th>
                                                                            <th>Actions</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% staffList.filter(u=> u.role ===
                                                                            "staff").forEach(function(h) { %>
                                                                            <tr>
                                                                                <td>
                                                                                    <%= h.name %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.email %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.phone %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.department %>
                                                                                </td>
                                                                                <td>
                                                                                    <span class="badge ">
                                                                                        <%= h.shifting || "N/A" %>
                                                                                    </span>
                                                                                    <a class="btn btn-sm btn-primary ml-2"
                                                                                        href="/admin/assign/shifting/<%= h._id %>">
                                                                                        <i class="fas fa-clock"></i>
                                                                                        Assign Shifting
                                                                                    </a>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.address %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= h.hospitalName %>
                                                                                </td>
                                                                                <td>
                                                                                    <%= new
                                                                                        Date(h.createdAt).toLocaleDateString('en-US',
                                                                                        { year: 'numeric' ,
                                                                                        month: 'long' , day: 'numeric'
                                                                                        }) %>
                                                                                </td>


                                                                                <td class="action-buttons">

                                                                                    <a href="/admin/edit-staff/<%= h._id %>"
                                                                                        class="btn btn-primary btn-sm">
                                                                                        <i class="fas fa-edit"></i>
                                                                                    </a>
                                                                                    <a href="/admin/delete-staff/<%= h._id %>"
                                                                                        class="btn btn-danger btn-sm">
                                                                                        <i class="fas fa-trash"></i>
                                                                                    </a>
                                                                                </td>
                                                                            </tr>
                                                                            <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>

                                                    </div> <!-- tab-content end -->

                                                </div> <!-- card-body end -->
                            </div>

                        </div>
                        <!-- /.container-fluid -->

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../layouts/footer.ejs') %>
                    <!-- End of Footer -->

            </div>
            <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->


    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include('../layouts/modal.ejs') %>

        <!-- Bootstrap core JavaScript-->
        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        <!-- SweetAlert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.js"></script>

        <!-- Custom scripts for all pages-->
        <script src="/js/sb-admin-2.min.js"></script>

        <!-- Page level plugins -->
        <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
        <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>

        <!-- Page level custom scripts -->
        <script src="/js/modal.js"></script>
        <script>
            $(document).ready(function () {
                $('.doctorTable, .nurseTable, .staffTable').DataTable();
            });
        </script>


</body>

</html>
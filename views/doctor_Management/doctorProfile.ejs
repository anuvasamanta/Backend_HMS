<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/form.css">
    <style>
        .profile-img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 4px solid #007bff;
            display: block;
            margin: 0 auto 15px auto;
        }

        .badge {
            font-size: 0.85rem;
        }

        .card-body p {
            line-height: 1.4;
        }
    </style>
</head>

<body id="page-top">
    <div id="wrapper">
        <!-- Sidebar -->
        <%- include('../layouts/doctorSidebar.ejs') %>

            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <!-- Navbar -->
                    <%- include('../layouts/navbar.ejs') %>

                        <!-- Flash Messages -->
                        <% if (success && success.length> 0) { %>
                            <div class="alert alert-success">
                                <%= success %>
                            </div>
                            <% } %>

                                <% if (error && error.length> 0) { %>
                                    <div class="alert alert-danger">
                                        <%= error %>
                                    </div>
                                    <% } %>

                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="container form-container">


                                                        <% if (!profile) { %>
                                                            <h1 class="mb-4">Doctor Profile</h1>
                                                            <!-- ==================== FORM ==================== -->
                                                            <form action="/doctor/doctor-profile" method="POST"
                                                                enctype="multipart/form-data">
                                                                <label>Qualification</label>
                                                                <input type="text" name="qualification"
                                                                    class="form-control" required>

                                                                <label>Experience (Years)</label>
                                                                <input type="number" name="experience"
                                                                    class="form-control" required>

                                                                <label>Timing</label>
                                                                <input type="text" name="timing" class="form-control"
                                                                    required>

                                                                <label>Languages (comma separated)</label>
                                                                <input type="text" name="language" class="form-control"
                                                                    required>

                                                                <label>Profile Image</label>
                                                                <input type="file" name="profile" class="form-control"
                                                                    accept="image/*" required>

                                                                <button type="submit"
                                                                    class="btn btn-primary mt-3">Create Profile</button>
                                                            </form>
                                                            <% } else { %>
                                                                <!-- ==================== PROFILE VIEW ==================== -->
                                                                <div class="card shadow-sm mx-auto my-4"
                                                                    style="max-width: 600px; border-radius: 15px;">
                                                                    <div class="card-header bg-primary text-white text-center py-3"
                                                                        style="border-top-left-radius: 15px; border-top-right-radius: 15px;">
                                                                        <h4 class="mb-0">Doctor Profile</h4>
                                                                    </div>

                                                                    <div class="card-body text-center">
                                                                        <!-- Profile Image -->
                                                                        <img src="<%= profile.profile %>"
                                                                            alt="Doctor Photo" class="profile-img mb-3">

                                                                        <!-- Name & Qualification -->
                                                                        <h5 class="card-title mb-2">
                                                                            <%= profile.name %>
                                                                        </h5>
                                                                        <h6 class="text-muted mb-3">
                                                                            <%= profile.qualification %>
                                                                        </h6>

                                                                        <!-- Details -->
                                                                        <p class="mb-1"><strong>Experience:</strong>
                                                                            <%= profile.experience %> years
                                                                        </p>
                                                                        <p class="mb-1"><strong>Timing:</strong>
                                                                            <%= profile.timing %>
                                                                        </p>
                                                                        <p class="mb-1"><strong>Phone:</strong>
                                                                            <%= profile.phone %>
                                                                        </p>
                                                                        <p class="mb-1"><strong>Email:</strong>
                                                                            <%= profile.email %>
                                                                        </p>

                                                                        <!-- Languages as badges -->
                                                                        <p class="mb-2"><strong>Languages:</strong>
                                                                            <%= profile.language%>
                                                                        </p>

                                                                        <p class="mb-1"><strong>Specialization:</strong>
                                                                            <%= profile.specialization || "N/A" %>
                                                                        </p>
                                                                        <p class="mb-1"><strong>Assigned
                                                                                Hospital:</strong>
                                                                            <%= profile.hospitalName || "N/A" %>
                                                                        </p>
                                                                        <p class="mb-3"><strong>Assigned
                                                                                Location:</strong>
                                                                            <%= profile.location || "N/A" %>
                                                                        </p>

                                                                        <!-- Edit Button -->
                                                                       <a href="/doctor/logout"
                                                                        class="btn btn-danger btn-sm">Logout</a>
                                                                    </div>
                                                                </div>
                                                                <% } %>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <%- include('../layouts/footer.ejs') %>
            </div>
            <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->

    <!-- Scripts -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/js/sb-admin-2.min.js"></script>
</body>

</html>